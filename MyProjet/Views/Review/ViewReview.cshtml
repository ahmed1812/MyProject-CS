@model Review
@{
    ViewData["Title"] = "ViewReview";
}

<h1>ViewReview</h1>
<div style="display: block">
    <a href="/Review/UpdateReview/@Model.ReviewID">Update this Review</a>
</div>
<table class="table">
    <tr>
        <th>ReviewID</th>
        <th>Comment</th>
        <th>ProductID</th>
        <th>Reviewer</th>
        <th>Rating</th>
    </tr>
    <tr>
        <td>@Model.ReviewID</td>
        <td>@Model.Comment</td>
        <td>@Model.ProductID</td>
        <td>@Model.Reviewer</td>
        <td>@Model.Rating</td>
    </tr>
</table>


<div style="display: block">
    @using (Html.BeginForm("DeleteReview", "Review", "Post"))
    {
        <input type="hidden" asp-for="ReviewID" value="@Model.ReviewID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this Review" />
    }
</div>