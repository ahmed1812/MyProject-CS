@model IEnumerable<Review>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div style="display: block">
    <a href="/Review/InsertReview/">Create a New Product</a>
</div>

<table class="table">
    <tr>
        <th>ReviewID</th>
        <th>Comment</th>
        <th>ProductID</th>
        <th>Reviewer</th>
        <th>Rating</th>
    </tr>
    @foreach (var review in Model)
    {
        <tr>
            <td><a href=/Review/ViewReview/@review.ReviewID>@review.ReviewID</a></td>
            <td>@review.Comment</td>
            <td>@review.ProductID</td>
            <td>@review.Reviewer</td>
            <td>@review.Rating</td>

    </tr>
    }
</table>