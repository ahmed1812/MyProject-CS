@model MyProjet.Models.Sale

@{
    ViewData["Title"] = "InsertSale";
}

<h1>InsertSale</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("InsertSaleToDatabase", "Sale", "Post"))
{
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="">Select a Product</label>
            <select class="form-control" name="ProductID" value="">
                @foreach (var prod in Model.products)
                {
                    <option value="@prod.ProductID">@prod.ProductID @prod.Name</option>
                }
            </select>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PricePerUnit" class="control-label"></label>
                <input asp-for="PricePerUnit" class="form-control" />
                <span asp-validation-for="PricePerUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="">Select a Employee</label>
            <select class="form-control" name="EmployeeID" value="">
                <label asp-for="Employees" class="control-label"></label>
                @foreach (var emp in Model.employees)
                {
                    <option value="@emp.EmployeeID">@emp.FirstName @emp.LastName</option>
                }
            </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

